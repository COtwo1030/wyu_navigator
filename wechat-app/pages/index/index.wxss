page { background: #fff; }
.nav-right { display: flex; align-items: center; padding-right: 8px; }
.nav-center { display: flex; align-items: center; justify-content: center; }
.nav-post { width: 22px; height: 22px; }
.index { height: 100vh; display: flex; flex-direction: column; }
.list { height: calc(100vh - 48px); padding: 12px; box-sizing: border-box; }
.card { background: #fff; border-radius: 10px; padding: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.06); }
.header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 6px; }
.username { font-weight: 600; color: #333; }
.time { font-size: 12px; color: #999; }
.tag { display: inline-block; margin-bottom: 6px; padding: 2px 6px; border-radius: 12px; background: #f0f9eb; color: #67C23A; font-size: 12px; }
.content { color: #333; line-height: 1.6; }
.footer { padding: 12px; text-align: center; }
.loading { color: #666; font-size: 12px; }
.nomore { color: #999; font-size: 12px; }
