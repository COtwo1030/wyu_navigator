page { background: #fff; }
.nav-right { display: flex; align-items: center; padding-right: 8px; }
.nav-center { display: flex; align-items: center; justify-content: center; }
.nav-post { width: 22px; height: 22px; }
.nav-left { display: flex; align-items: center; padding-left: 0; }
.nav-left-logo { height: 45px; }
/* 去掉组件左侧默认内边距，使Logo贴左 */
.nav-index .weui-navigation-bar__left { padding-left: 0; }
.index { height: 100vh; display: flex; flex-direction: column; }
.category-bar { display: flex; gap: 18px; padding: 10px 12px 6px; border-bottom: 1px solid #f3f3f3; }
.category-item { display: flex; flex-direction: column; align-items: center; }
.category-text { color: #666; font-size: 14px; }
.category-item.active .category-text { color: #111; font-weight: 600; }
.category-underline { width: 24px; height: 3px; background: #4CAF50; border-radius: 2px; margin-top: 4px; }
.list { height: calc(100vh - 48px - 44px); padding: 12px; box-sizing: border-box; }
.card { background: #fff; border-radius: 10px; padding: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.06); }
.header { display: flex; align-items: center; gap: 10px; margin-bottom: 6px; }
.avatar { width: 32px; height: 32px; border-radius: 50%; background: #eee; }
.header-right { display: flex; flex-direction: column; flex: 1; }
.top-row { display: flex; justify-content: space-between; align-items: center; }
.meta { margin-top: 4px; display: flex; align-items: center; gap: 6px; }
.gender-icon { width: 16px; height: 16px; }
.year-badge { height: 20px; line-height: 20px; padding: 0 8px; background: #e5e5e5; color: #333; border-radius: 10px; font-size: 12px; }
.username { font-weight: 600; color: #333; }
.time { font-size: 12px; color: #999; }
.tag { display: inline-block; margin-bottom: 6px; padding: 2px 6px; border-radius: 12px; background: #f0f9eb; color: #67C23A; font-size: 12px; }
.content { color: #333; line-height: 1.6; }
.imgs-grid { margin-top: 6px; display: flex; flex-wrap: wrap; gap: 8px; }
.img-wrap { width: calc((100% - 16px) / 3); height: 96px; border-radius: 8px; overflow: hidden; position: relative; background: #eee; }
.img-item { width: 100%; height: 100%; }
.more-mask { position: absolute; left: 0; right: 0; top: 0; bottom: 0; background: rgba(0,0,0,0.35); color: #fff; display: flex; align-items: center; justify-content: center; font-size: 20px; font-weight: 600; }
.metrics { display: flex; justify-content: space-between; align-items: center; margin-top: 8px; }
.metrics-right { display: flex; gap: 16px; }
.metric { display: flex; flex-direction: row; align-items: center; }
.metric-icon { width: 18px; height: 18px; }
.metric-num { margin-left: 6px; font-size: 12px; color: #666; }
.footer { padding: 12px; text-align: center; }
.loading { color: #666; font-size: 12px; }
.nomore { color: #999; font-size: 12px; }
.comment-overlay { position: fixed; left: 0; right: 0; bottom: 0; background: rgba(255,255,255,0.96); box-shadow: 0 -6px 16px rgba(0,0,0,0.08); padding: 12px; z-index: 99; }
.comment-box { display: flex; flex-direction: column; gap: 8px; }
.comment-input { height: 38px; border: 1px solid #e5e5e5; border-radius: 8px; padding: 0 10px; background: #fff; }
.comment-actions { display: flex; gap: 10px; justify-content: flex-end; }
.comment-send { height: 34px; line-height: 34px; padding: 0 14px; border-radius: 17px; background: #4CAF50; color: #fff; border: none; }
.comment-cancel { height: 34px; line-height: 34px; padding: 0 14px; border-radius: 17px; background: #e9eef8; color: #333; border: none; }
