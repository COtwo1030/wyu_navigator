page { background: #fff; }
.detail { padding: 12px; }
.bottom-spacer { height: calc(24px + env(safe-area-inset-bottom)); }
.no-more { margin: 10px 0; text-align: center; color: #999; font-size: 12px; }
.header { display: flex; align-items: center; gap: 10px; margin-bottom: 8px; }
.avatar { width: 36px; height: 36px; border-radius: 50%; background: #eee; }
.header-right { display: flex; flex-direction: column; flex: 1; }
.top-row { display: flex; justify-content: space-between; align-items: center; }
.username { font-weight: 600; color: #333; }
.time { font-size: 12px; color: #999; }
.meta { margin-top: 4px; display: flex; align-items: center; gap: 6px; }
.gender-icon { width: 16px; height: 16px; }
.year-badge { height: 20px; line-height: 20px; padding: 0 8px; background: #e5e5e5; color: #333; border-radius: 10px; font-size: 12px; }
.tag { display: inline-block; margin-bottom: 6px; padding: 2px 6px; border-radius: 12px; background: #f0f9eb; color: #67C23A; font-size: 12px; }
.content { color: #333; line-height: 1.7; }
.imgs-grid { margin-top: 8px; display: flex; flex-wrap: wrap; gap: 8px; }
.img-wrap { width: calc((100% - 16px) / 3); height: 96px; border-radius: 8px; overflow: hidden; position: relative; background: #eee; }
.img-item { width: 100%; height: 100%; display: block; }

.metrics { display: flex; gap: 16px; align-items: center; margin: 10px 0 16px; }
.metric { display: flex; align-items: center; }
.metric-icon { width: 18px; height: 18px; }
.metric-num { margin-left: 6px; font-size: 12px; color: #666; }

.comment-title { margin: 8px 0; font-size: 14px; color: #333; border-top: 1px solid #f0f0f0; padding-top: 10px; }
.comment-item { padding: 10px 0; }
.c-imgs { display: flex; gap: 8px; flex-wrap: wrap; }
.c-img-wrap { width: calc((100% - 16px) / 3); height: 80px; border-radius: 8px; overflow: hidden; position: relative; background: #eee; }
.c-img { width: 100%; height: 100%; display: block; }
.r-imgs { display: flex; gap: 8px; flex-wrap: wrap; }
.c-header { display: flex; align-items: flex-start; justify-content: flex-start; gap: 8px; }
.c-info { display: flex; flex-direction: column; gap: 2px; }
.c-sub { display: flex; align-items: center; gap: 12px; }
.c-username { color: #333; font-weight: 500; }
.c-time { font-size: 12px; color: #999; }
.c-content { color: #333; margin-top: 4px; }
.c-actions { margin-top: 6px; display: flex; gap: 16px; align-items: center; }
.c-meta { margin-top: 6px; display: flex; align-items: center; gap: 16px; }
.c-action { display: flex; align-items: center; gap: 6px; }
.c-icon { width: 18px; height: 18px; }
.c-num { font-size: 12px; color: #666; }
.c-reply { font-size: 12px; color: #4CAF50; }
.c-toggle { margin-top: 6px; font-size: 12px; color: #999; margin-left: 40px; }
.c-toggle-row { display: flex; align-items: center; gap: 8px; }
.c-toggle-line { width: 24px; height: 1px; background: #e5e5e5; }
.c-toggle-text { color: #666; }
.c-toggle-icon { color: #999; }
.c-toggle-bar { display: flex; align-items: center; gap: 16px; margin-left: 40px; }
.c-toggle-bar .c-toggle { margin-left: 0; }
.replies { margin-top: 8px; margin-left: 40px; padding-left: 0; display: flex; flex-direction: column; gap: 8px; }
.reply-item { }
.r-header { display: flex; align-items: flex-start; justify-content: flex-start; gap: 8px; }
.r-username { color: #333; font-weight: 500; }
.r-content { color: #333; margin-top: 4px; }

.r-meta { margin-top: 6px; display: flex; align-items: center; gap: 16px; }
.r-time { font-size: 12px; color: #999; }
.r-reply { font-size: 12px; color: #4CAF50; }
.r-action { display: flex; align-items: center; gap: 6px; }


.comment-bar { position: fixed; left: 0; right: 0; bottom: 0; background: #fff; padding: 8px 12px; box-shadow: 0 -6px 16px rgba(0,0,0,0.06); display: flex; gap: 8px; align-items: center; }
.cb-left { flex: 1; display: flex; flex-direction: column; gap: 6px; }
.comment-input { width: 100%; height: 38px; border: 1px solid #e5e5e5; border-radius: 8px; padding: 6px 10px; box-sizing: border-box; }
.comment-input--expanded { height: 72px; }
.attach-grid { display: flex; gap: 8px; flex-wrap: wrap; }
.attach-item { position: relative; width: 60px; height: 60px; border-radius: 8px; overflow: hidden; background: #eee; }
.attach-thumb { width: 100%; height: 100%; }
.attach-del { position: absolute; right: 2px; top: 2px; width: 28px; height: 28px; background: rgba(0,0,0,0.6); color: #fff; display:flex; align-items:center; justify-content:center; line-height: 28px; border-radius: 14px; font-size: 14px; z-index: 999; }
.attach-add { width: 60px; height: 60px; border-radius: 8px; border: 1px dashed #ccc; display: flex; align-items: center; justify-content: center; color: #999; }
.cb-icons { display: flex; gap: 12px; align-items: center; }
.cb-bottom { display: flex; gap: 12px; align-items: center; }
.cb-right { display: flex; flex-direction: column; justify-content: center; align-items: flex-end; }
.cb-icon { width: 24px; height: 24px; }
.send-button { align-self: flex-end; width: 64px; height: 32px; background: #ff0033ff; color: #fff; border-radius: 16px; display: flex; align-items: center; justify-content: center; font-size: 14px; }
.like-icon { width: 24px; height: 24px; }
.c-avatar { width: 24px; height: 24px; border-radius: 50%; background: #eee; margin-right: 8px; }
.r-avatar { width: 18px; height: 18px; border-radius: 50%; background: #eee; margin-right: 8px; }
.r-info { display: flex; flex-direction: column; gap: 2px; }
.r-sub { display: flex; align-items: center; gap: 12px; }
