page, .home {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f7f8fa;
}
.content {
  flex: 1;
  padding: 16px 16px 24px;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  gap: 12px;
}
.title {
  font-size: 22px;
  font-weight: 600;
  color: #333;
}
.desc {
  margin-top: 8px;
  font-size: 14px;
  color: #666;
}

.bottom-bar {
  position: sticky;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 12px 16px 24px;
  background: #fff;
  display: flex;
  gap: 12px;
  justify-content: center;
  box-shadow: 0 -6px 16px rgba(0,0,0,0.06);
}
.btn {
  flex: 1;
  height: 44px;
  border-radius: 22px;
  background: #e9eef8;
  color: #333;
  border: none;
}
.btn.primary {
  background: #4CAF50;
  color: #fff;
}

.profile {
  width: 100%;
  display: flex;
  align-items: center;
  gap: 12px;
}
.avatar {
  width: 64px;
  height: 64px;
  border-radius: 50%;
  background: #eee;
}
.info { display: flex; flex-direction: column; }
.username-row { display: flex; align-items: center; gap: 8px; }
.username { font-size: 18px; font-weight: 600; color: #333; }
.login-tip { font-size: 16px; color: #1E90FF; }
.logout-btn {
  margin-left: auto;
  height: 28px;
  line-height: 28px;
  padding: 0 12px;
  border-radius: 14px;
  background: #ff4d4f;
  color: #fff;
  border: none;
}
.meta { margin-top: 6px; display: flex; align-items: center; gap: 8px; color: #666; }
.gender-icon { width: 18px; height: 18px; }
.year-badge { height: 24px; line-height: 24px; padding: 0 10px; background: #e5e5e5; color: #333; border-radius: 12px; font-size: 14px; }

.edit-form { width: 100%; margin-top: 12px; padding: 12px; background: #fff; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.04); }
.form-row { display: flex; align-items: center; gap: 12px; margin-bottom: 10px; }
.label { width: 72px; color: #555; }
.picker { flex: 1; height: 36px; line-height: 36px; padding: 0 10px; background: #f5f5f5; border-radius: 6px; }
.input { flex: 1; height: 36px; padding: 0 10px; border: 1px solid #e5e5e5; border-radius: 6px; }
.form-actions { display: flex; gap: 10px; justify-content: flex-end; }
.save-btn { background: #07c160; color: #fff; border: none; height: 36px; line-height: 36px; padding: 0 14px; border-radius: 18px; }
.cancel-btn { background: #eee; color: #333; border: none; height: 36px; line-height: 36px; padding: 0 14px; border-radius: 18px; }