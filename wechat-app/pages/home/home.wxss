page, .home {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f7f8fa;
}
.content {
  flex: 1;
  padding: 24px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.title {
  font-size: 22px;
  font-weight: 600;
  color: #333;
}
.desc {
  margin-top: 8px;
  font-size: 14px;
  color: #666;
}

.bottom-bar {
  position: sticky;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 12px 16px 24px;
  background: #fff;
  display: flex;
  gap: 12px;
  justify-content: center;
  box-shadow: 0 -6px 16px rgba(0,0,0,0.06);
}
.btn {
  flex: 1;
  height: 44px;
  border-radius: 22px;
  background: #e9eef8;
  color: #333;
  border: none;
}
.btn.primary {
  background: #4CAF50;
  color: #fff;
}