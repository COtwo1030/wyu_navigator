page, .point {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f7f8fa;
}
.pane { flex: 1; display: flex; }
.left { width: 90px; background: #f0f2f5; border-right: 1px solid #eaeaea; }
.right { flex: 1; background: #fff; }
.header { display: flex; align-items: center; gap: 8px; padding: 10px; border-bottom: 1px solid #f2f2f2; }
.header-icon { width: 26px; height: 26px; }
.header-text { font-size: 20px; font-weight: 600; color: #333; }
.cat { padding: 10px; font-size: 16px; color: #333; background: #f0f2f5; }
.cat + .cat { border-top: 1px solid #e6e6e6; }
.cat.active { color: #4CAF50; font-weight: 600; background: #fff; border-left: 3px solid #e53935; }
.grid { display: flex; flex-wrap: wrap; gap: 8px; padding: 10px; }
.card { width: calc((100% - 16px) / 3); background: #fff; border-radius: 10px; box-shadow: 0 2px 8px rgba(0,0,0,0.06); overflow: hidden; }
.cover { width: 100%; height: 100px; background: #f2f2f2; }
.name { padding: 8px; font-size: 16px; color: #333; }
.mask { position: fixed; left:0; top:0; right:0; bottom:0; background: rgba(0,0,0,0.4); }
.dialog { position: fixed; left: 6%; right: 6%; top: 50%; transform: translateY(-50%); background: #fff; border-radius: 12px; overflow: hidden; box-shadow: 0 6px 18px rgba(0,0,0,0.18); }
.dlg-cover { width: 100%; height: 200px; background: #f2f2f2; }
.dlg-name { padding: 16px 14px 8px; font-size: 20px; font-weight: 600; color: #333; text-align: center; }
.dlg-desc { padding: 0 14px 12px; font-size: 14px; color: #666; }
.dlg-actions { display: flex; gap: 12px; padding: 12px 14px 16px; }
.dlg-btn { flex: 1; height: 40px; border-radius: 20px; background: #e9eef8; color: #333; border: none; }
.dlg-btn.primary { background: #4CAF50; color: #fff; }
