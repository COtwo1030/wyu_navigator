page, .reset { height: 100vh; display: flex; flex-direction: column; background: #f7f8fa; }
.form { padding: 16px; }
.input-wrap { position: relative; display: flex; align-items: center; margin-bottom: 12px; }
.icon { width: 20px; height: 20px; margin: 0 8px; }
.input { flex: 1; height: 44px; border-radius: 8px; background: #fff; padding: 0 12px; border: 1px solid #eee; }
.code-btn { position: absolute; right: 8px; top: 50%; transform: translateY(-50%); height: 24px; line-height: 24px; padding: 0 2px !important; border-radius: 12px; background: #e9eef8; color: #2E6ADF; border: none; display: inline-block; font-size: 11px; width: auto !important; min-width: 0 !important; white-space: nowrap; z-index: 9; }
.code-input { padding-right: 72px; }
.btn { height: 44px; border-radius: 22px; border: none; background: #4CAF50; color: #fff; }