page { background: #fff; }
.mylikes { padding: 12px; }
.list { height: calc(100vh - 44px); }
.card { background: #fff; border-radius: 10px; padding: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.06); margin-bottom: 12px; }
.tag { display: inline-block; margin-bottom: 6px; padding: 2px 6px; border-radius: 12px; background: #f0f9eb; color: #67C23A; font-size: 12px; }
.content { color: #333; line-height: 1.6; }
.imgs-grid { margin-top: 6px; display: flex; flex-wrap: wrap; gap: 8px; }
.img-wrap { width: calc((100% - 16px) / 3); height: 72px; border-radius: 8px; overflow: hidden; position: relative; background: #eee; }
.img-item { width: 100%; height: 100%; }
.more-mask { position: absolute; left: 0; right: 0; top: 0; bottom: 0; background: rgba(0,0,0,0.35); color: #fff; display: flex; align-items: center; justify-content: center; font-size: 18px; font-weight: 600; }
